{
  "name": "tauri-pictionary",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"pnpm dev:api\" \"pnpm dev:frontend\"",
    "dev:api": "uvicorn backend.main:app --reload --port 8000",
    "dev:frontend": "pnpm --filter frontend dev -- --port 5173",
    "dev:desktop": "pnpm tauri dev",
    "build": "pnpm --filter frontend build",
    "build:desktop": "pnpm --filter frontend build && pnpm tauri build",
    "preview": "pnpm --filter frontend preview",
    "tauri": "tauri"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0-alpha.11",
    "canvas-confetti": "^1.9.3",
    "clsx": "^2.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.0.0-alpha.17",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.1.2",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.4"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac",
  "beforeBuildCommand": "pnpm --filter frontend build && rm -rf src-tauri/dist && cp -R frontend/dist src-tauri/dist"
}
